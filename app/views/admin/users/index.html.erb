<h2>Users</h2>

<section class="users">
  <table>
    <thead>

      <tr>
        <th>
          Username
        </th>

        <th>
          Name
        </th>

        <th>
          <%= sort_link "Number of Rants", params[:sort] %>
        </th>

        <th>
          Disabled
        </th>

        <th>
          Actions
        </th>
      </tr>

    </thead>

    <tbody>

      <% @users.each do |user| %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.full_name %></td>
          <td><%= user.rants.count %></td>
          <td><%= user.disabled? ? "âœ“" : "" %></td>
          <td><%= disable_link user %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</section>
