<section class="rant">
  <h3>
    <%= @rant.title %>

    <div class="links">
      <%= favorite_link @rant %>
    </div>
  </h3>

  <div class="text">
    <%= image_tag @rant.author.image %>

    <h2>
      by <%= link_to @rant.author.full_name, @rant.author %>
    </h2>

    <div class="links">
      <%= link_to 'Tweet',
      'https://twitter.com/share',
      class: 'twitter-share-button', data: {
        text: "Check out this Rantly rant: #{@rant.title} ",
        count: 'none',
        size: 'large'
      } %>
      <%= link_to "Spam", spam_rant_path(@rant), :class => "button warning", :method => :post %>
    </div>

    <%= @rant.rendered_body %>
  </div>

  <%= render "comments/form", :commentable => @rant, :url => rant_comments_path(@rant) %>
</section>


