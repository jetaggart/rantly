<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <div class="brand">
    <h1>Rantly</h1>
  </div>

  <div class="tools">
    <% if current_user %>
      <%= link_to "Logout", session_path, :method => :destroy %>
    <% else %>
      <%= link_to "Login", new_session_path %>
      <%= link_to "Join", new_user_path, :class => "call-to-action" %>
    <% end %>
  </div>

</nav>

<main>
  <% if notice %>
    <div class="notice">
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert">
      <%= alert %>
    </div>
  <% end %>

  <%= yield %>
</main>

</body>
</html>
