<!DOCTYPE html>
<html>
<head>
    <title>Rantly</title>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
</head>
<body>
<div class="all-content">

    <nav>
        <div class="brand">
            <h1>
                <%= link_to "Rantly", dashboard_path %>
            </h1>
        </div>

        <div class="spacing"></div>

        <div class="logged-in-navigation">
            <% if current_user %>
                <ul>
                    <li><%= nav_link "Dashboard", dashboard_path %></li>
                    <li><%= nav_link "Following", followings_path %></li>
                    <li><%= nav_link "Favorites", favorites_path %></li>
                    <li><%= nav_link "Search", search_path %></li>
                </ul>
            <% end %>
        </div>

        <div class="tools">
            <% if current_user %>
                <%= link_to "Logout", session_path, :method => :delete, :class => "call-to-action" %>
            <% else %>
                <%= link_to "Login", new_session_path %>
                <%= link_to "Join", new_user_path, :class => "call-to-action" %>
            <% end %>
        </div>

    </nav>

    <% if notice %>
        <div class="notice">
            <%= notice %>
        </div>
    <% end %>

    <% if alert %>
        <div class="alert">
            <%= alert %>
        </div>
    <% end %>

    <main>
        <%= content_for?(:content) ? yield(:content) : yield %>
    </main>

</div>
</body>
</html>

