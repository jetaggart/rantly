<section class="my-rants">
    <h3>My Rants</h3>
    <ul>
        <% @my_rants.each do |rant| %>
            <li class="rant">
                <div class="author">
                    <h4><%= rant.author.full_name %></h4>

                    <%= image_tag "profile.jpg" %>
                </div>

                <div class="text">
                    <h4> <%= rant.title %></h4>
                    <%= rant.body %>
                </div>
            </li>
        <% end %>
    </ul>
</section>
