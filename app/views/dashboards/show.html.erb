<section class="other-rants">
  <h3>Latest Rants</h3>

  <ul>
    <%= render @latest_rants %>
  </ul>
</section>

<section class="my-rants">
  <h3>My Rants</h3>
  <ul>
    <% @my_rants.each do |rant| %>
      <li class="rant">
        <div class="author">
          <%= link_to rant.author.full_name, rant.author %>

          <%= image_tag "profile.jpg" %>
        </div>

        <div class="text">
          <h4> <%= rant.title %></h4>
          <%= truncate(rant.body, :length => 400) %>
        </div>

        <div class="actions">
          <%= link_to "Delete", rant_path(rant), :method => :delete %>
        </div>
      </li>
    <% end %>
  </ul>
</section>

